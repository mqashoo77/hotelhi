<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hotelhi">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hotelhi"
        tools:targetApi="31">
        <activity
            android:name=".activites.SortActivity"
            android:exported="false" />
        <activity
            android:name=".activites.FilterActivity"
            android:exported="false" /> <!-- Set HomeActivity as the launcher activity -->
        <activity
            android:name=".activites.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".activites.SearchActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activites.RoomManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activites.RoomBookingActivity"
            android:exported="false" />
        <activity
            android:name=".activites.HotelDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activites.HotelManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activites.DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".activites.BookingManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activites.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activites.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activites.RegistrationActivity"
            android:exported="false" />
    </application>

</manifest>